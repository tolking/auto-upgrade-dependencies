{
	"name": "auto-upgrade-dependencies",
	"displayName": "Auto Upgrade Dependencies",
	"description": "Automatically detect and upgrade dependencies when lock files change",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.74.0"
	},
	"repository": {
    "type": "git",
    "url": "https://github.com/tolking/auto-upgrade-dependencies"
  },
  "keywords": [
    "node",
    "dependencies",
    "upgrade",
    "node_modules"
  ],
  "author": "tolking <qw13131wang@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tolking/auto-upgrade-dependencies/issues"
  },
  "homepage": "https://github.com/tolking/auto-upgrade-dependencies#readme",
	"publisher": "tolking",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:package.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.upgradeDependencies",
				"title": "%extension.upgradeDependencies.title%"
			},
			{
				"command": "extension.manualUpdateDependencies",
				"title": "%extension.manualUpdateDependencies.title%",
				"icon": "$(sync)"
			},
			{
				"command": "extension.manualUpgradeDependencies",
				"title": "%extension.manualUpgradeDependencies.title%",
				"icon": "$(arrow-up)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "extension.manualUpdateDependencies",
					"when": "resourceFilename == package.json",
					"group": "navigation"
				},
				{
					"command": "extension.manualUpgradeDependencies",
					"when": "resourceFilename == package.json",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "%configuration.title%",
			"properties": {
				"upgradeDependencies.packageManager": {
					"type": "string",
					"enum": [
						"npm",
						"yarn",
						"pnpm"
					],
					"default": "pnpm",
					"description": "%configuration.packageManager.description%"
				},
				"upgradeDependencies.autoUpdate": {
					"type": "boolean",
					"default": false,
					"description": "%configuration.autoUpdate.description%"
				}
			}
		}
	},
	"scripts": {
		"dev": "tsc -watch -p ./",
		"build": "tsc -p ./",
		"test": "npm run lint:test",
		"lint": "eslint . --fix --ext .ts,.mjs,.js",
    "lint:test": "npm run lint -- --max-warnings 0"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/glob": "^7.2.0",
		"@types/node": "^20",
		"@types/vscode": "^1.69.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^9.13.0",
		"glob": "^11.0.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
